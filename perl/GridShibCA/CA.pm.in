package GridShibCA::CA;

# Credential parameters
$LIFETIME = 1;   # in days
$RELATIVE_DN = "@RELATIVE_DN@";

# new()
# Create a new interface to the CA.
# Arguments:
#  $username - name of user as string
#  $idp - idp of user as string
# Returns: CA instance
sub new
{
    my $class = shift;
    my $self = {};
    $self->{username} = shift;
    $self->{idp} = shift;
    $self->{lifetime} = $LIFETIME;
    $self->{relativeDN} = $RELATIVE_DN;
    $self->{error} = undef;
    bless($self, $class);
    return $self;
}

# getDN
# Given a username, return the DN for the user
# Arguments: None
# Returns: DN as string, or undef on error

sub getDN
{
    my $self = shift;

    my $DN = "CN=" . $self->{username} . ", " . $self->{relativeDN};

    return $DN;
}

# signRequest
# Given a certificate request return a certificate
# Arguments: None
# Returns: Certificate as string, or undef on error
#  Username
sub signRequest
{
    $self->_error("signRequest() unimplemented");
    return undef;
}

sub _error
{
    my $self = shift;
    my $format = shift;
    $self->{error} = sprintf($format, @_);
}

sub getError
{
    my $self = shift;
    return $self->{error}
}

# Return true for import/use
1;

