#
# Config class
#
# Interface to GridShib CA configuration and loader of classes based
# on that configuration.
#

package GridShibCA::Config;

my $initialized = 0;

my $configFile = "@GRIDSHIB_CA_CONFIG_FILE@";

# Default configuration
my %config = (
    loggerModule => "GridShibCA::Logger",
    caModule => "GridShibCA::OpenSSLCA",
    cgiModule => "GridShibCA::CGIinterface",
    tokenGeneratorModule => "GridShibCA::TokenGenerator",
    );
    
# new()
# Create a new Config object.
# Arguments: None
# Returns: Config instance
sub new
{
    my $class = shift;
    my $self = {};
    if (!$initialized)
    {
	_readConfig($configFile);
	$initialized = 1;
    }
    bless($self, $class);
    return $self;
}

# getParam()
# Return a configuration parameter.
# Arguments: Parameter name as string
# Returns: Value as string, undef if not defined
sub getParam
{
    my $self = shift;
    my $param = shift;
    return $config{$param};
}

######################################################################
#
# Class fetching functions. These functions fetch instances of
# classes bases on configuration.

sub getLogger
{
    my $self = shift;
    return $self->_newInstance($config{"loggerModule"}, @_);
}

sub getCA
{
    my $self = shift;
    return $self->_newInstance($config{"caModule"}, @_);
}

sub getCGI
{
    my $self = shift;
    return $self->_newInstance($config{"cgiModule"}, @_);
}

sub getTokenGenerator
{
    my $self = shift;
    return $self->_newInstance($config{"tokenGeneratorModule"}, @_);
}

######################################################################
#
# _newInstance()
# Create a new instance of the given class
# Arguments:
#  $class   Name of class to create
#  @_       Arguments to pass to new() method
# Returns: Instance, or undef on error, 
sub _newInstance
{
    my $self = shift;
    my $class = shift;
    if (!defined($class))
    {
	$self->_error("\$class undefined");
	return undef;
    }
    my @args = @_;

    my $instance = undef;
    eval "use $class; \$instance = $class->new(\@args);";
    if ($@)
    {
	$self->_error($@);
	return undef;
    }
    return $instance;
}

# _readConfig()
# Read our configuration file.
# Arguments: Filename
# Returns: Nothing
sub _readConfig
{
    use GridShibCA::Logger;
    use FileHandle;

    my $filename = shift;

    # We use the default logger for now until we know what class we
    # will use in general
    my $logger = GridShibCA::Logger->new();

    my $fh = new FileHandle;
    if (!$fh->open("<" . $filename))
    {
	$logger->err("Could not open configuration file ($filename): $!");
	return;
    }
    while (<$fh>)
    {
	# Strip comments
	s/#.*$//;
	# Ignore blank lines
	next if (/^\s*$/);
	# Parameters should be of the form "var = value"
	if (/(\w+)\s*=\s*(.*)$/)
	{
	    my $var = $1;
	    my $value = $2;
	    if (!defined($config{$var}))
	    {
		$logger->err("Unrecognized variable $var on line $. of $filename");
		next;
	    }
	    $config{$var} = $value;
	}
	else
	{
	    $logger->err("Could not parse line $. of $filename: $_");
	    next;
	}
    }
    $fh->close();
}



sub _error
{
    my $self = shift;
    my $format = shift;
    $self->{error} = sprintf($format, @_);
}

sub getError
{
    my $self = shift;
    return $self->{error}
}

# Return true for import/use
1;

