#
# Logger class
#
# Interface to logging.
#

package GridShibCA::Logger;

use Sys::Syslog;
use File::Basename;

# Syslog parameters
$SYSLOG_ID = "@SYSLOG_ID@";
$SYSLOG_OPTS = "pid";
$SYSLOG_FACILITY = "@SYSLOG_FACILITY@";

$LOGGER_PROG = "@GRIDSHIB_LOGGER_PROG@";

# new()
# Create a new Logger object.
# Arguments: None
# Returns: Logger instance
sub new
{
    my $class = shift;
    my $self = {};
    my $id = sprintf("%s (%s)", $SYSLOG_ID, basename($0));
    openlog($id, $SYSLOG_OPTS, $SYSLOG_FACILITY);
    bless($self, $class);
    return $self;
}

# log()
# Log a message.
# Arguments:
#  $level - one of "info", "warn", "err"
#  $format, @args - as would be presented to sprintf()
# Returns: Nothing
sub log
{
    my $self = shift;
    my $level = shift;
    my $format = shift;
    my @args = @_;
    syslog($level, $format, @args);
}

# info()
# Log an informative message
# Arguments:
#  $format, @args - as would be presented to sprintf()
# Returns: Nothing
sub info
{
    my $self = shift;
    $self->log("info", @_);
}


# err()
# Log an error message
# Arguments:
#  $format, @args - as would be presented to sprintf()
# Returns: Nothing
sub err
{
    my $self = shift;
    $self->log("err", @_);
}

# Return true for import/use
1;

