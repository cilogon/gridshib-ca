<project name="CredentialRetriever" default="build" basedir=".">
<target name="build">
  <javac srcdir="." destdir="." />
</target>
<target name="jar" depends="jar-sign"/>
<target name="jar-file" depends="build">
  <jar jarfile="CredentialRetriever.jar"
       basedir="./"
       excludes="*.jar *.java webdocs/ build.xml .classpath .project" />
</target>
<target name="jar-sign" depends="jar-file">
  <input
     message="Signing passphrase:"
     addproperty="pass"/>
  <signjar jar="CredentialRetriever.jar"
	   alias="default"
	   storetype="pkcs12"
	   storepass="${pass}"/>
</target>
<target name="trustStore">
  <exec executable="createTrustStore.sh">
    <arg value="resources/trustStore"/>
  </exec>
</target>
</project>
